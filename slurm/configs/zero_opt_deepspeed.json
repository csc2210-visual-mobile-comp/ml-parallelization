{
  "train_micro_batch_size_per_gpu": 2,
  "gradient_accumulation_steps": 1,

  "fp16": {
    "enabled": true
  },

  "zero_optimization": {
    "stage": 2,
    "overlap_comm": true,
    "contiguous_gradients": true,
    "reduce_bucket_size": 2.5e7,
    "allgather_bucket_size": 2.5e7
  },

  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 5e-5,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },

  "wall_clock_breakdown": false
}